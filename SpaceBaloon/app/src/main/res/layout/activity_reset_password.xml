<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accountthing.ResetPasswordActivity"
    android:background="@drawable/backgroud1">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_forget_password"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_forget_password"
        android:text="FORGET PASSWORD?"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_forget_password"
        android:text="We need your email ID to sent you the new password"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/forget_email_text_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_loggin"
        android:drawableLeft="@drawable/email"
        android:hint="enter your email"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/send_email_password_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/forget_email_text_id"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_register"
        android:hint="Reset Password"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/back_to_login_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/send_email_password_id"
        android:background="@drawable/forgot_password_button"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>