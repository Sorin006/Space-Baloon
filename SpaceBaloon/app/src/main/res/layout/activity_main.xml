<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/settings2"
    >

    <TextView
        android:id="@+id/user_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:layout_marginTop="10dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/old_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_email_id"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:hint="email"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/password_input_for_reset"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_email_id"
        android:focusableInTouchMode="true"
        android:hint="enter your password"
        android:textSize="30dp"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/new_password_input_for_reset"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_input_for_reset"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true"
        android:hint="new password"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/change_button_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password_input_for_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="Change"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@drawable/button_login"
        />

    <Button
        android:id="@+id/remove_button_id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_button_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="Remove"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@drawable/button_login"
        />

    <Button
        android:id="@+id/change_user_password_button_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/remove_button_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="Change password"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@drawable/text_loggin"
        />

    <Button
        android:id="@+id/remove_user_button_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_user_password_button_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="Remove User"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@drawable/text_loggin"
        />

    <Button
        android:id="@+id/sign_out_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remove_user_button_id"
        android:text="SIgn Out"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_logout"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />



</RelativeLayout>